<div class="question <%= "depth-#{qing.depth}" %><%= qing.condition ? ' conditional' : '' %>">
  <div class="name">
    <% if qing.condition %>
      <div class="condition"><%= t("question.answer_only_caps") %> <%= qing.condition.to_s %></div>
    <% end %>
    <h3 class="name">
      <%= qing.full_dotted_rank %>. <%= reqd_sym if qing.required? %>
      <%= qing.question.name %>
    </h3>
    <% unless qing.question.hint.blank? %>
      <i class="hint"><%= qing.question.hint %></i>
    <% end %>
  </div>
  <div class="answer <%= qing.qtype_name %>_answer">
    <% # print options if necessary %>
    <% if qing.has_options? %>
      <% qing.options.each do |opt| %>
        <label class="option">
          <input name="<%= qing.id %>" type="radio" class="option_box"/>
          <%= opt.name %>
        </label>
      <% end %>
    <% else %>
      <div class="answer_box"></div>
    <% end %>
  </div>
</div>
